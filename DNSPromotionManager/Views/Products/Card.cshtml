@model Product

@{ TableItemEvent e = ViewBag.CardEvent; }
@using (Html.BeginForm("Card", "Products", new
{
    e = ((TableItemEvent)ViewBag.CardEvent)
}, FormMethod.Post, true, new
{
    @class = "form-horizontal",
    @role = "form"
}))
{
    <div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-sm-2 control-label"></label>
            <div class="col-sm-4 input-group">
                <input asp-for="Name" class="form-control card-control" placeholder="Название" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Code" class="col-sm-2 control-label"></label>
            <div class="col-sm-4 input-group">
                <input asp-for="Code" class="form-control card-control" placeholder="Код" />
                <span asp-validation-for="Code" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="KindId" class="col-sm-2 control-label"></label>

            <div class="col-sm-4 input-group">
                <select asp-for="KindId" class="form-control card-control" asp-items="ViewBag.KindVariants"></select>
                <span asp-validation-for="KindId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ParentId" class="col-sm-2 control-label"></label>

            <div class="col-sm-4 input-group">
                <select asp-for="ParentId" class="form-control card-control" asp-items="ViewBag.ParentVariants"></select>
                <span asp-validation-for="ParentId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DelFlag" class="col-sm-2 control-label"></label>
            <div class="input-group">
                <input asp-for="DelFlag" class="form-control card-control" />
                <span asp-validation-for="DelFlag" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
                <button type="submit" class="btn btn-default" value="Save">
                    Принять?
                </button>
            </div>
        </div>
    </div>
}

@Html.Partial("_ValidationScriptsPartial")

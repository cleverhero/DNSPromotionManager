@model ProductCharacteristic

@{ TableItemEvent e = ViewBag.CardEvent; }
@using (Html.BeginForm("Card", "ProductCharacteristics", new
{
    e = ((TableItemEvent)ViewBag.CardEvent)
}, FormMethod.Post, true, new
{
    @class = "form-horizontal",
    @role = "form"
}))
{
<div>
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="ProductId" class="col-sm-2 control-label"></label>

        <div class="col-sm-4 input-group">
            <select asp-for="ProductId" class="form-control card-control" asp-items="ViewBag.ProductVariants"></select>
            <span asp-validation-for="ProductId" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CharacteristicId" class="col-sm-2 control-label"></label>

        <div class="col-sm-4 input-group">
            <select asp-for="CharacteristicId" class="form-control card-control" asp-items="ViewBag.CharacteristicVariants"></select>
            <span asp-validation-for="CharacteristicId" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CharacteristicValueId" class="col-sm-2 control-label"></label>

        <div class="col-sm-4 input-group">
            <select asp-for="CharacteristicValueId" class="form-control card-control" asp-items="ViewBag.CharacteristicValueVariants"></select>
            <span asp-validation-for="CharacteristicValueId" class="text-danger" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
            <button type="submit" class="btn btn-default" value="Save">
                Принять?
            </button>
        </div>
    </div>
</div>
}

@Html.Partial("_ValidationScriptsPartial")

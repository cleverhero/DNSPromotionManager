@model Promotion

@{ TableItemEvent e = ViewBag.CardEvent; }

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Редактор</h4>
    </div>
    <div class="modal-body">
        <form asp-antiforgery="true" class="form-horizontal card" role="form" asp-action="PromotionsCard" 
              asp-controller="Home" asp-route-e="@((TableItemEvent)ViewBag.CardEvent)">
            <div>
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Name" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4 input-group">
                        <input asp-for="Name" class="form-control card-control" placeholder="Название" />
                        <span asp-validation-for="Name" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Code" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4 input-group">
                        <input asp-for="Code" class="form-control card-control" placeholder="Код" />
                        <span asp-validation-for="Code" class="text-danger" />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Begin" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4 input-group">
                        <input asp-for="Begin" type="date" class="form-control card-control" placeholder="Начало" />
                        <span asp-validation-for="Begin" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="End" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4 input-group">
                        <input asp-for="End" type="date" class="form-control card-control" placeholder="Конец" />
                        <span asp-validation-for="End" class="text-danger" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default" value="Save">
                            Принять?
                        </button>
                    </div>
                </div>
            </div>
        </form>

        @if (e == TableItemEvent.Delete)
        {
            <script type="text/javascript">
                $(".card-control").attr("disabled", true);
            </script>
        }

        @Html.Partial("_ValidationScriptsPartial")
    </div>
</div>
